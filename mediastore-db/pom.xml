                <groupId>org.codehaus.mojo</groupId>
                <artifactId>wagon-maven-plugin</artifactId>
                <version>1.0-beta-3</version>
                <configuration>
                    <fromFile>target/dbStore.jar</fromFile>
                    <url>${my-home}</url>
